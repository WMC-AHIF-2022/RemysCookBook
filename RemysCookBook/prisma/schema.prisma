// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model recipes {
  recipeID Int @id 
  recipeName String 
  preparation String 
  rating Int?
  category String
  weekID Int?
  recipeDate String?
}

model requestedRecipes {
  recipeID Int @id 
  recipeName String
  requestedFrom String
}

model ingredients {
  ingredientID Int @id
  recipeID Int
  ingredientName String 
  amount String?
  unit String?
}